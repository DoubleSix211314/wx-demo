.container{
  display: flex;
  flex-direction: column;
}

.head-image{
  width: 100%;
  height: 460rpx;
}

.author-date{
  display: flex;
  flex-direction: row;
  margin: 20rpx 0 0 30rpx;
  align-items: center;
}

.avatar{
  width: 64rpx;
  height: 64rpx;
}

.author{
  font-size: 30rpx;
  font-weight: 300;
  margin-left: 20rpx;
  color: #666;
}

.const-text{
  font-size: 24rpx;
  color: #999;
  margin-left: 20rpx;
}

.date{
  font-size: 24rpx;
  color: #999;
  margin-left: 30rpx;
}

.title{
  font-size: 36rpx;
  font-weight: 700;
  letter-spacing: 2px;
  color: #4b556c;
  margin: 30rpx 0 0 40rpx;
}

.tool{
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
}
/* 主轴，交叉轴 */
/* align-items是子元素在交叉轴上的排布方式
justify-content是子元素在主轴上的排布方式 */

.circle{
  display: flex;
  width: 660rpx;
  flex-direction: row;
  justify-content: flex-end;
}

.circle image{
  width: 90rpx;
  height: 90rpx;
}

.share-img{
  margin-left: 30rpx;
}

.horizon{
  width: 660rpx;
  height: 1px;
  background-color: #e5e5e5;
  position: absolute;
  z-index: -99;
}

.detail{
  color: #666;
  margin: 20rpx 30rpx 0 30rpx;
  line-height: 44rpx;
  letter-spacing: 2px;
}

.audio{
  width: 102rpx;
  height: 110rpx;
  position: absolute;
  left: 50%;
  margin-left: -51rpx;
  top: 180rpx;
  opacity: 0.6;
}

.author-date{
  flex-direction: row;
  margin-left: 30rpx;
}